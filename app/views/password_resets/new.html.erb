<h1 style="margin-top: 100px">Enter your email address</h1>
<div class="row">
  <div class="col-6">
    <%= form_for :password_reset, url: password_resets_path, data_remote: false do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <br>

      <%= f.submit "send", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>