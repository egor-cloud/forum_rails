<h1 style="margin-top: 100px">New password</h1>
<div class="row">
  <div class="col-6">
<!--    В params[:id] указан токен-->
    <%= form_for @user, url: password_reset_path(params[:id], data_remote: false) do |f| %>
      <%= render 'shared/error_messages_user' %>
<!--      Здесь вместо-->
<!--      f.hidden_field :email, @user.email-->
<!--      использован вспомогательный метод, генерирующий теги элементов формы-->
<!--      hidden_field_tag :email, @user.email-->
<!--      потому что ссылка на страницу сброса помещает адрес электронной почты-->
<!--      в params[:email] -->
      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:password].present?} " %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Password confirm" %>
        <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if @user
            .errors[:password_confirmation].present?} " %>
      </div>

      <br>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

