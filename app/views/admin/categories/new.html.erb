<h1 style="margin-top: 100px">New topic</h1>
<div class="row">
  <div class="col-6">
    <%= form_for @category, url: admin_categories_path, multipart: true, data_remote: false do |f| %>
      <% render "shared/error_messages_category", category: @category %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :avatar, class: "form-control-file", id: "file" %>
        <p>Available resolution: jpg, jpeg, png. </p>
      </div>

      <div class="form-group">
        <%= f.label :parent_id %>
        <%= f.collection_select :parent_id, Category.all, :id,  :name,
                                {include_blank: true}, class: "form-control browser-default custom-select" %>
      </div>

      <%= f.submit "create", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>